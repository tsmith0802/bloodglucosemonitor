<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Glucose & A1C Tracker</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 40px; background-color: #f4f4f4; }
    h1 { color: #333; }
    form { background: #fff; padding: 20px; border-radius: 8px; }
    input, button { margin: 10px 0; padding: 8px; width: 100%; }
    table { width: 100%; margin-top: 20px; border-collapse: collapse; }
    th, td { border: 1px solid #ccc; padding: 10px; text-align: center; }
  </style>
</head>
<body>
  <h1>Blood Glucose & A1C Tracker</h1>
  <form id="trackerForm">
    <label for="date">Date:</label>
    <input type="date" id="date" required>

    <label for="glucose">Blood Glucose (mg/dL):</label>
    <input type="number" id="glucose" required>

    <label for="a1c">A1C (%):</label>
    <input type="number" step="0.1" id="a1c">

    <button type="submit">Add Entry</button>
  </form>

  <table id="dataTable">
    <thead>
      <tr>
        <th>Date</th>
        <th>Glucose</th>
        <th>A1C</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>

  <script>
    const form = document.getElementById('trackerForm');
    const tableBody = document.querySelector('#dataTable tbody');

    form.addEventListener('submit', function(e) {
      e.preventDefault();
      const date = document.getElementById('date').value;
      const glucose = document.getElementById('glucose').value;
      const a1c = document.getElementById('a1c').value;

      const row = document.createElement('tr');
      row.innerHTML = `<td>${date}</td><td>${glucose}</td><td>${a1c || '-'}</td>`;
      tableBody.appendChild(row);

      form.reset();
    });
  </script>
</body>
</html>
